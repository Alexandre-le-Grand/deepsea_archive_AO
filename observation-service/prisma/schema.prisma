generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  VALIDATED
  REJECTED
}

model Species {
  id           String        @id @default(uuid())
  name         String        @unique
  description  String        @db.Text
  authorId     String
  rarityScore  Float         @default(1.0) // <-- AJOUT ICI (Float car division)
  createdAt    DateTime      @default(now())
  observations Observation[]
}

model Observation {
  id          String    @id @default(uuid())
  speciesId   String
  authorId    String    // ID de l'user
  description String    @db.Text
  status      Status    @default(PENDING)
  validatedBy String?   // ID de l'expert/admin (nullable)
  validatedAt DateTime?
  createdAt   DateTime  @default(now())

  species     Species   @relation(fields: [speciesId], references: [id])
}