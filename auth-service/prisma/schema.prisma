generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  EXPERT
  ADMIN
}

model User {
  id         String   @id @default(uuid()) // ID en string (UUID)
  email      String   @unique
  username   String
  password   String
  role       Role     @default(USER)
  reputation Int      @default(0)
  createdAt  DateTime @default(now())
}